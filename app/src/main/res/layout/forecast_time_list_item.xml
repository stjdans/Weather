<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="android.view.View" />
        <variable
            name="item"
            type="com.example.weathers.data.model.WeatherWithPosition" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="@{item.weather.baseTime}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:src_id="@{item.weather.skyIcon}"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@{item.weather.temp}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/icon"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/rainfall_per"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@{item.weather.rainfallPer}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/temp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/rainfall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@{item.weather.rainfall}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rainfall_per"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/wind"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@{item.weather.windSpeed}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rainfall"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@{item.weather.humidity}"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/wind"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>